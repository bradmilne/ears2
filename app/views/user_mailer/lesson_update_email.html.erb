                <table border="0" cellpadding="0" cellspacing="0" align="center" class="deviceWidth logo-table" width="100%" style="border: 1px solid #FFFFFF;border-collapse: collapse;mso-table-lspace: 0pt;mso-table-rspace: 0pt;">
                    <tr>
                        <td height="76" class="center" align="center"> <%= link_to image_tag attachments('eartutor_black.png'), root_path %> </td>
                    </tr>
                </table>

<!-- Lesson information -->
                <table border="0" cellpadding="0" cellspacing="0" align="right" width="100%" class="deviceWidth name-table" style="border: 1px solid #FFFFFF;border-collapse: collapse;mso-table-lspace: 0pt;mso-table-rspace: 0pt;">
