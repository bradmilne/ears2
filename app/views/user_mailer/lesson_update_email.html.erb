<!-- Wrapper/Container Table: Use a wrapper table to control the width and the background color consistently of your email. Use this approach instead of setting attributes on the body tag. -->
<!-- Start Header-->
<table width="100%" border="0" cellpadding="0" cellspacing="0" align="center" style="border-collapse: collapse;mso-table-lspace: 0pt;mso-table-rspace: 0pt; padding: 5px; background: #87AFC7;">
    <tr>
        <td width="100%" valign="top" height="100">
        <!-- Email Body -->
        <table width="580" height="400" class="deviceWidth" border="0" cellpadding="0" cellspacing="0" align="center" bgcolor="#FFFFFF" style="border-collapse: collapse;mso-table-lspace: 0pt;mso-table-rspace: 0pt; border: 1px solid #15317E; padding: 5px; margin-bottom: 30px; margin-top: 30px;">
            <tr>
                <td>

